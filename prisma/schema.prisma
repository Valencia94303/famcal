// FamCal Database Schema
// Family dashboard with calendar and chores tracking

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============================================
// NextAuth.js Models
// ============================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// Family Dashboard Models
// ============================================

model FamilyMember {
  id        String   @id @default(cuid())
  name      String
  avatar    String?  // Emoji or image URL
  color     String   // Hex color for visual identification
  role      String   @default("CHILD") // PARENT or CHILD
  email     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignedChores       ChoreAssignment[]
  completions          ChoreCompletion[]
  pointTransactions    PointTransaction[]
  redemptionsRequested RewardRedemption[] @relation("RedemptionRequester")
  redemptionsApproved  RewardRedemption[] @relation("RedemptionApprover")
  habitLogs            HabitLog[]
}

model Chore {
  id          String   @id @default(cuid())
  title       String
  description String?
  icon        String?  // Emoji or icon name
  points      Int      @default(0) // Optional reward points
  priority    String   @default("NORMAL") // LOW, NORMAL, HIGH, URGENT

  // Recurrence settings
  recurrence String? // DAILY, WEEKLY, BIWEEKLY, MONTHLY, CUSTOM
  recurDays  String? // JSON array of days: ["MON","WED","FRI"]
  recurTime  String? // Time of day: "09:00"

  dueDate   DateTime? // For one-time chores
  isActive  Boolean   @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignments ChoreAssignment[]
  completions ChoreCompletion[]
}

model ChoreAssignment {
  id            String       @id @default(cuid())
  chore         Chore        @relation(fields: [choreId], references: [id], onDelete: Cascade)
  choreId       String
  assignee      FamilyMember @relation(fields: [assigneeId], references: [id], onDelete: Cascade)
  assigneeId    String

  // For rotating assignments
  rotationOrder Int?

  createdAt DateTime @default(now())

  @@unique([choreId, assigneeId])
}

model ChoreCompletion {
  id            String       @id @default(cuid())
  chore         Chore        @relation(fields: [choreId], references: [id], onDelete: Cascade)
  choreId       String
  completedBy   FamilyMember @relation(fields: [completedById], references: [id], onDelete: Cascade)
  completedById String
  completedAt   DateTime     @default(now())

  // For recurring chores, which instance was completed
  scheduledFor DateTime

  @@index([choreId, scheduledFor])
}

// Cached calendar events for fast display
model CalendarEvent {
  id          String   @id @default(cuid())
  googleId    String   @unique
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  allDay      Boolean  @default(false)
  location    String?
  calendarId  String
  color       String?  // Event color from Google Calendar

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([startTime])
}

// Google OAuth tokens for calendar access
model GoogleAuth {
  id           String   @id @default("singleton")
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  calendarIds  String?  // JSON array of calendar IDs to sync
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// App settings
model Settings {
  id               String   @id @default("singleton")
  displayName      String   @default("Family Dashboard")
  timezone         String   @default("America/New_York")
  showWeather      Boolean  @default(true)
  weatherLocation  String?
  theme            String   @default("auto") // auto, morning, afternoon, evening, night
  allowedEmails    String?  // JSON array of allowed email addresses
  carouselInterval Int      @default(30) // Seconds between widget rotations
  carouselAnimation String  @default("arrivingTogether") // Animation preset

  // Weather & Header Display settings
  headerMode              String   @default("clock")     // "clock", "weather", "alternate"
  headerAlternateInterval Int      @default(30)          // seconds between switches
  weatherLat              Float?                         // latitude for weather
  weatherLon              Float?                         // longitude for weather
  weatherCity             String?                        // city name to display

  // Photo Screensaver settings
  screensaverEnabled    Boolean  @default(false)
  screensaverStartHour  Int      @default(18)           // 6 PM
  screensaverEndHour    Int      @default(23)           // 11 PM
  screensaverPhotoPath  String   @default("/home/pi/famcal-photos")
  screensaverInterval   Int      @default(15)           // seconds per photo

  updatedAt DateTime @updatedAt
}

// ============================================
// Points & Rewards System
// ============================================

// Points ledger - tracks all point transactions
model PointTransaction {
  id                String       @id @default(cuid())
  familyMember      FamilyMember @relation(fields: [familyMemberId], references: [id], onDelete: Cascade)
  familyMemberId    String
  amount            Int          // Positive = earned, negative = spent
  type              String       // CHORE_COMPLETION, BONUS, REDEMPTION
  description       String?
  choreCompletionId String?      // Links to ChoreCompletion if earned from chore
  createdAt         DateTime     @default(now())

  @@index([familyMemberId])
  @@index([createdAt])
}

// Rewards catalog
model Reward {
  id           String   @id @default(cuid())
  name         String
  description  String?
  pointsCost   Int
  icon         String?  // Emoji or icon name
  isActive     Boolean  @default(true)
  isCashReward Boolean  @default(false)
  cashValue    Float?   // Dollar amount if cash reward
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  redemptions RewardRedemption[]
}

// Redemption requests with approval workflow
model RewardRedemption {
  id            String        @id @default(cuid())
  reward        Reward        @relation(fields: [rewardId], references: [id], onDelete: Cascade)
  rewardId      String
  requestedBy   FamilyMember  @relation("RedemptionRequester", fields: [requestedById], references: [id], onDelete: Cascade)
  requestedById String
  pointsSpent   Int
  status        String        @default("PENDING") // PENDING, APPROVED, DENIED
  approvedBy    FamilyMember? @relation("RedemptionApprover", fields: [approvedById], references: [id])
  approvedById  String?
  approvedAt    DateTime?
  denialReason  String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@index([requestedById])
  @@index([status])
}

// Points settings (conversion rate, etc.)
model PointsSettings {
  id                 String   @id @default("singleton")
  cashConversionRate Float    @default(0.1) // 10 pts = $1 means rate = 0.1
  minCashoutPoints   Int      @default(100) // Minimum points for cash-out
  updatedAt          DateTime @updatedAt
}

// ============================================
// Quick Tasks (Obsidian Import)
// ============================================

// Simple tasks imported from Obsidian or created manually
model Task {
  id            String    @id @default(cuid())
  title         String
  completed     Boolean   @default(false)
  priority      String?   // HIGH, MEDIUM, LOW (from Obsidian: ‚è´, üîº, üîΩ)
  dueDate       DateTime? // üìÖ in Obsidian
  startDate     DateTime? // üõ´ in Obsidian
  scheduledDate DateTime? // ‚è≥ in Obsidian
  recurrence    String?   // üîÅ in Obsidian (e.g., "every day", "every week")
  notes         String?
  sourceFile    String?   // Original .md filename if imported
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  completedAt   DateTime?

  @@index([completed])
  @@index([dueDate])
}

// ============================================
// Shopping List
// ============================================

model ShoppingItem {
  id        String   @id @default(cuid())
  name      String
  quantity  Int      @default(1)
  unit      String?  // e.g., "lbs", "oz", "pack", "dozen"
  store     String   @default("OTHER") // COSTCO, WALMART, TARGET, OTHER
  checked   Boolean  @default(false)
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([store])
  @@index([checked])
}

// ============================================
// Habits & Daily Schedule
// ============================================

// Habits that kids can complete daily for points
model Habit {
  id          String   @id @default(cuid())
  name        String
  icon        String?  // Emoji
  points      Int      @default(1)
  frequency   String   @default("DAILY") // DAILY, WEEKLY
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  logs HabitLog[]
}

// Log of completed habits
model HabitLog {
  id             String       @id @default(cuid())
  habit          Habit        @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId        String
  familyMember   FamilyMember @relation(fields: [familyMemberId], references: [id], onDelete: Cascade)
  familyMemberId String
  completedAt    DateTime     @default(now())
  completedDate  String       // YYYY-MM-DD for easy querying

  @@unique([habitId, familyMemberId, completedDate])
  @@index([familyMemberId])
  @@index([completedDate])
}

// Daily schedule items (routines)
model ScheduleItem {
  id        String   @id @default(cuid())
  title     String
  time      String   // HH:MM format
  icon      String?  // Emoji
  days      String?  // JSON array of days, null = every day
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([time])
}

// Family photos for slideshow
model FamilyPhoto {
  id        String   @id @default(cuid())
  url       String   // URL or path to photo
  caption   String?
  createdAt DateTime @default(now())

  @@index([createdAt])
}
